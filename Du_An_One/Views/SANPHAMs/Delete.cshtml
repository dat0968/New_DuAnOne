@model Du_An_One.Models.SANPHAM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/_LayoutAdmin.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có muốn xóa sản phẩm này không?</h3>
<div>
    <h4>Thông tin sản phẩm sắp xóa</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenSP)
        </dd>
        <dt class = "col-sm-2">
            Số lượng bán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SoLuongBan)
        </dd>
        <dt class = "col-sm-2">
            Đơn giá bán
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DonGiaBan)
        </dd>
        <dt class = "col-sm-2">
            Ngày nhập
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NgayNhap)
        </dd>
        <dt class = "col-sm-2">
            Hãng sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DanhMucHang)
        </dd>
        <dt class = "col-sm-2">
            Kích cỡ
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KichCo)
        </dd>
        <dt class = "col-sm-2">
            Mô tả sản phẩm
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class = "col-sm-2">
            Mã khuyến mãi
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaKhuyenMai)
        </dd>
        <dt class = "col-sm-2">
            Mã nhân viên
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaNV)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaSP" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
